// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DATABASE_URL_UNPOOLED")
}

// ============================================
// NextAuth.js Models
// ============================================

model User {
  id                 String    @id @default(cuid())
  name               String?
  username           String?   @unique
  email              String    @unique
  emailVerified      DateTime?
  image              String?
  onboardingComplete Boolean   @default(false)
  accounts           Account[]
  sessions           Session[]
  projects           Project[]
  createdAt          DateTime  @default(now())
  updatedAt          DateTime  @updatedAt
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// ============================================
// Project Model
// ============================================

model Project {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Onboarding
  hasIdea     Boolean?
  platform    String   @default("")
  teamSize    String   @default("")
  timeHorizon String   @default("")

  // Idea Path
  ideaDescription String   @default("")
  vibeChips       String[] @default([])
  structuredIdea  Json?

  // No-Idea Path (Ikigai)
  ikigai        Json     @default("{\"chips\":[]}")
  sparkRounds   Json     @default("[]")
  selectedSpark Json?

  // Sparks context
  additionalContext     String @default("")
  regenerationAttempts  Json   @default("[]")

  // Final
  finalTitle   String @default("")
  finalConcept String @default("")

  // Game Loop Diagram
  gameLoop Json @default("[]")

  // Concept Card
  conceptImage         String  @default("")
  hasConceptCard       Boolean @default(false)
  conceptCardCreatedAt String  @default("")

  // Progress tracking
  currentPage String @default("create")

  @@index([userId])
}
