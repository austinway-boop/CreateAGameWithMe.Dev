// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DATABASE_URL_UNPOOLED")
}

// ============================================
// NextAuth.js Models
// ============================================

model User {
  id                 String            @id @default(cuid())
  name               String?
  username           String?           @unique
  email              String            @unique
  emailVerified      DateTime?
  image              String?
  onboardingComplete Boolean           @default(false)
  hasVideoUnlock     Boolean           @default(false)
  aiCreditsUsed      Int               @default(0)
  aiCreditsResetAt   DateTime?
  accounts           Account[]
  sessions           Session[]
  projects           Project[]
  validationRuns     ValidationRun[]
  feedbackReports    FeedbackReport[]
  subscriptions      Subscription[]
  generatedArt       GeneratedArt[]
  models3D           Model3D[]
  generatedMusic     GeneratedMusic[]
  calendarPlans      CalendarPlan[]
  createdAt          DateTime          @default(now())
  updatedAt          DateTime          @updatedAt
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// ============================================
// Project Model
// ============================================

model Project {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Onboarding
  hasIdea     Boolean?
  platform    String   @default("")
  teamSize    String   @default("")
  timeHorizon String   @default("")

  // Idea Path
  ideaDescription String   @default("")
  vibeChips       String[] @default([])
  structuredIdea  Json?

  // No-Idea Path (Ikigai)
  ikigai        Json     @default("{\"chips\":[]}")
  sparkRounds   Json     @default("[]")
  selectedSpark Json?

  // Sparks context
  additionalContext     String @default("")
  regenerationAttempts  Json   @default("[]")

  // Final
  finalTitle   String @default("")
  finalConcept String @default("")

  // Game Loop Diagram
  gameLoop Json @default("[]")

  // Questions
  gameQuestions Json?

  // Skill Tree
  skillTree Json @default("[]")

  // Concept Card
  conceptImage         String  @default("")
  hasConceptCard       Boolean @default(false)
  conceptCardCreatedAt String  @default("")

  // Progress tracking
  currentPage String @default("create")

  // Validation runs
  validationRuns ValidationRun[]

  // AI-generated assets
  generatedArt   GeneratedArt[]
  models3D       Model3D[]
  generatedMusic GeneratedMusic[]
  calendarPlans  CalendarPlan[]

  @@index([userId])
}

// ============================================
// Validation & Feedback Models
// ============================================

model ValidationRun {
  id        String   @id @default(cuid())
  projectId String
  project   Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  result    Json     // Full ComprehensiveValidation JSON
  createdAt DateTime @default(now())

  feedbackReports FeedbackReport[]

  @@index([projectId])
  @@index([userId])
  @@index([createdAt])
}

model FeedbackReport {
  id              String        @id @default(cuid())
  validationRunId String
  validationRun   ValidationRun @relation(fields: [validationRunId], references: [id], onDelete: Cascade)
  userId          String
  user            User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  section         String        // e.g. "hardTruth", "market", "competition", "loop", "retention", "dealbreakers", "verdict"
  reportType      String        // "inaccurate" or "unhelpful"
  comment         String?
  createdAt       DateTime      @default(now())

  @@index([validationRunId])
  @@index([userId])
}

// ============================================
// Subscription Model
// ============================================

model Subscription {
  id                   String   @id @default(cuid())
  userId               String
  user                 User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  stripeCustomerId     String?
  stripeSubscriptionId String?  @unique
  plan                 String   // "starter" or "pro"
  status               String   @default("active") // "active", "cancelled", "past_due"
  createdAt            DateTime @default(now())
  updatedAt            DateTime @updatedAt

  @@index([userId])
  @@index([stripeCustomerId])
}

// ============================================
// AI-Generated Asset Models
// ============================================

model GeneratedArt {
  id             String   @id @default(cuid())
  userId         String
  user           User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  projectId      String
  project        Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
  sketchBase64   String   @db.Text // The user's sketch input
  resultBase64   String   @db.Text // The AI-generated result
  prompt         String   @default("")
  style          String   @default("")
  createdAt      DateTime @default(now())

  @@index([userId])
  @@index([projectId])
}

model Model3D {
  id               String   @id @default(cuid())
  userId           String
  user             User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  projectId        String
  project          Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
  meshyTaskId      String   @unique
  status           String   @default("PENDING") // PENDING, IN_PROGRESS, SUCCEEDED, FAILED
  progress         Int      @default(0)
  glbUrl           String?
  fbxUrl           String?
  objUrl           String?
  usdzUrl          String?
  thumbnailUrl     String?
  sourceImageBase64 String  @db.Text
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  @@index([userId])
  @@index([projectId])
  @@index([meshyTaskId])
}

model GeneratedMusic {
  id              String   @id @default(cuid())
  userId          String
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  projectId       String
  project         Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
  loudlyId        String   @default("")
  title           String   @default("")
  duration        Int      @default(0) // duration in seconds
  musicFileUrl    String   @default("")
  waveformUrl     String   @default("")
  prompt          String   @default("")
  bpm             Int?
  createdAt       DateTime @default(now())

  @@index([userId])
  @@index([projectId])
}

model CalendarPlan {
  id           String   @id @default(cuid())
  userId       String
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  projectId    String
  project      Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
  calendarData Json     // Structured JSON with phases, milestones, weekly tasks
  generatedAt  DateTime @default(now())

  @@index([userId])
  @@index([projectId])
}
